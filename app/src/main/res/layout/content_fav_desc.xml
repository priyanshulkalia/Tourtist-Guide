<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:src="@drawable/load"
        android:id="@+id/img_favdesc"/>
    <TextView
        android:id="@+id/text_gallery_favdesc"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:gravity="end"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="more images..."
        android:textColor="@color/gallery"
        android:onClick="onClick"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name1_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:text="Name       :"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_name_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/FontColor"
            android:layout_weight="1"
            android:text="Nill"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_rating_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:text="Rating     :"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nill"
            android:layout_weight="1"
            android:textColor="@color/Rating"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:id="@+id/rating_favdesc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address  :"
            android:textSize="@dimen/text_size"
            android:layout_weight="2.5"
            android:textColor="#000000"
            android:id="@+id/text_address1_favdesc"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nill"
            android:textColor="@color/AddColor"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:id="@+id/text_address_favdesc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_status1_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:text="Today      :"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nill"
            android:textColor="@color/AddColor"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:id="@+id/text_status_favdesc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_number1_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:text="Contact   :"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nill"
            android:textColor="@color/AddColor"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:id="@+id/text_number_favdesc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_web1_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:text="Website    :"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nill"
            android:textColor="@color/gallery"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:id="@+id/text_web_favdesc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_distance1_favdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:text="Distance  :"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nill"
            android:textColor="@color/gallery"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:id="@+id/text_distance_favdesc"/>
    </LinearLayout>

</LinearLayout>